<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="alertDialogTheme">@style/AppAlertDialog</item>
        <item name="toolbarStyle">@style/AppToolbar</item>
        <item name="bottomNavigationStyle">@style/AppBottomBar</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">?android:attr/colorBackground</item>
        <item name="android:statusBarColor">?android:attr/colorBackground</item>
    </style>

    <style name="AppToolbar" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="AppBottomBar" parent="@style/Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="AppAlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">

    </style>

</resources>
