<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">?android:attr/colorBackground</item>
        <item name="colorPrimaryDark">?android:attr/colorBackground</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="alertDialogTheme">@style/AppAlertDialog</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">?colorPrimaryDark</item>
        <item name="android:navigationBarDividerColor">#e3e3e3</item>
    </style>

    <style name="AppAlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
